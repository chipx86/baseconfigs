# -*- shell-script -*-

# ls
export LS_OPTIONS="--color=auto -FB -T 0"
export GREP_OPTIONS="--color=auto"
export GREP_COLOR="1;33"


# Compilation
export MAKEFLAGS="-j2"


## History
HISTSIZE=1000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE


## Set up pretty ls colors
eval `dircolors ~/.dircolorsrc`


## Editor of the month
export EDITOR=vim


## Path
export PATH="$HOME/bin:$PATH"
